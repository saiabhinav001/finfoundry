rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ── Event images ────────────────────────────────────────
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ── Team member photos ──────────────────────────────────
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ── Resource files ──────────────────────────────────────
    match /resources/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ── Deny everything else ────────────────────────────────
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
